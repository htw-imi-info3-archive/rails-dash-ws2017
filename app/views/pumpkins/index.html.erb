<p id="notice"><%= notice %></p>

<h1><%=t '.pumpkins'%></h1>

locale: <%= params[:locale] %>

<% form_tag projects_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag <%=t '.search'%>, :name => nil %>
  </p>
<% end %>

<div>
   <% link_to_unless_current "English", locale:"en" %>
   <% link_to_unless_current "Deutsch", locale: "de" %>
</div>

<table>
  <thead>
    <tr>
      <th><%=t '.species'%></th>
      <th><%=t '.carved'%></th>
      <th><%=t '.size'%></th>
      <th><%=t '.weight'%></th>
      <th><%=t '.price'%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pumpkins.each do |pumpkin| %>
      <tr>
        <td><%= pumpkin.species %></td>
        <td><%= pumpkin.carved %></td>
        <td><%= pumpkin.size %></td>
        <td><%= pumpkin.weight %></td>
        <td><%= pumpkin.price %></td>
        <td><%= link_to <%=t '.show'%>, pumpkin %></td>
        <td><%= link_to <%=t '.edit'%>, edit_pumpkin_path(pumpkin) %></td>
        <td><%= link_to <%=t '.destroy'%>, pumpkin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to <%=t '.new_pumpkin'%>, new_pumpkin_path %>
